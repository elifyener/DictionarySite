@using EntityLayer.Concrete
@model List<Writer>
@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <br />
    <br />
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Yazarlar</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Yazar ara..">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Main content -->
                <!-- Default box -->
                <div class="card-body pb-0">
                    <div class="row d-flex align-items-stretch">
                        @foreach (var item in Model)
                        {
                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                                <div class="card bg-light">
                                    <div class="card-header text-muted border-bottom-0">
                                        @item.WriterTitle
                                    </div>
                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="lead"><b>@item.WriterName @item.WriterSurname</b></h2>
                                                <p class="text-muted text-sm"><b>Hakkında: </b>@item.WriterAbout</p>
                                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail: @item.WriterMail</li>
                                                </ul>
                                            </div>
                                            <div class="col-5 text-center">
                                                <img src="@item.WriterImage" alt="" class="img-circle img-fluid">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="text-right">
                                            <a href="#" class="btn btn-sm " style="background-color: #457b9d; color: #f1faee">
                                                <i class="fas fa-comments">Yazar Başlıkları</i>
                                            </a>
                                            <a href="/Writer/EditWriter/@item.WriterID" class="btn btn-sm" style="background-color: #e63946; color: #f1faee">
                                                <i class="fas fa-user"></i> Profili Düzenle
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                         }
                    </div>
                    <a href="/Writer/AddWriter/" class="btn" style="background-color: #1d3557; color: #f1faee ">Yazar Ekle</a>
                </div>
                <br />
                <!-- /.card -->
                
            </div>
        </div>
    </div>
    <br />


</body>
</html>