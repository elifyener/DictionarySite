@model  EntityLayer.Concrete.Writer
@{ ViewBag.Title = "AddWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<br>
<div class="form-group align-content-center">
    <div class="col-md-12">
        <div class="card card-dark">
            <div class="card-header">
                <h3 class="card-title">Yazar Ekle</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                @using (Html.BeginForm("AddWriter", "Writer", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Yazar Adı</label>
                                @Html.TextBoxFor(x => x.WriterName, new { placeholder = "Giriniz...", @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- textarea -->
                            <div class="form-group">
                                <label>Yazar Soyadı</label>
                                @Html.TextBoxFor(x => x.WriterSurname, new { placeholder = "Giriniz...", @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterSurname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                  
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- textarea -->
                            <div class="form-group">
                                <label>Yazar Maili</label>
                                @Html.TextBoxFor(x => x.WriterMail, new { placeholder = "Giriniz...", @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- textarea -->
                            <div class="form-group">
                                <label>Yazar Görseli</label>
                                @Html.TextBoxFor(x => x.WriterImage, new { placeholder = "Giriniz...", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- textarea -->
                            <div class="form-group">
                                <label>Yazar Ünvanı</label>
                                @Html.TextBoxFor(x => x.WriterTitle, new { placeholder = "Giriniz...", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- textarea -->
                            <div class="form-group">
                                <label>Yazar Hakkında</label>
                                @Html.TextAreaFor(x => x.WriterAbout, new { placeholder = "Giriniz...", @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <button class="btn" style="background-color: #457b9d; color: #f1faee ">Kaydet</button>
                    <a href="/Writer/Index/" class="btn" style="background-color: #e63946; color: #f1faee ">İptal</a>
                 }
            </div>
            <br />
        </div>
        <!-- /.card-body -->
        <br />
    </div>
</div>


