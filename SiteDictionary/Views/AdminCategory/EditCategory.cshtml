@model EntityLayer.Concrete.Category
@{ ViewBag.Title = "EditCategory";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<br />

<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Kategori Düzenle</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        @using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
         {

            @Html.HiddenFor(x => x.CategoryID, new { placeholder = "Giriniz...", @class = "form-control" })

            <div class="row">
                <div class="col-sm-12">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Kategori Adı</label>
                        @Html.TextBoxFor(x => x.CategoryName, new { placeholder = "Giriniz...", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <!-- textarea -->
                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x => x.CategoryDescription, new { placeholder = "Giriniz...", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <button class="btn btn-success">Güncelle</button>
            <a href="/AdminCategory/Index/" class="btn btn-outline-success">İptal</a>
         }
    </div>
    <!-- /.card-body -->
</div>

