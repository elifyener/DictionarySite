@using EntityLayer.Concrete
@model List<Content>
@{
    ViewBag.Title = "ContentByHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <br />
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <!-- Timelime example  -->
                @foreach (var item in Model)
                {
                    <h2 style="margin-left: 25px">@item.Heading.HeadingName</h2>
                    <br />
                    break;
                    
                }
                <div class="row">
                    <div class="col-md-12">
                        <!-- The time line -->
                        <div class="timeline">
                            @foreach (var item in Model)
                            {<!-- timeline item -->
                                <div>
                                    <div class="timeline-item">

                                        <div class="timeline-body">

                                            @item.ContentValue

                                            <br />

                                            <small><i class="fab fa-facebook-f"></i>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fab fa-twitter"></i>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-chevron-up"></i>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-chevron-down"></i></small>
                                            <small class="float-right">@(((DateTime)item.ContentDate).ToString("dd-MMM-yyy")) | <a href="#">@item.Writer.WriterName @item.Writer.WriterSurname</a></small>
                                        </div>
                                    </div>
                                </div> <!-- END timeline item -->
                            }
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <!-- /.timeline -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
</body>
</html>


