@model EntityLayer.Concrete.Heading
@{ ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
}

<br />
<div class="card card-dark">
    <div class="card-header">
        <h3 class="card-title">Başlığı Düzenle</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        @using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
        {

            @Html.HiddenFor(x => x.HeadingID, new { placeholder = "Giriniz...", @class = "form-control" })

            <div class="row">
                <div class="col-sm-12">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Kategori Adı</label>
                        @Html.TextBoxFor(x => x.HeadingName, new { placeholder = "Giriniz...", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <!-- textarea -->
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control", @Value = Model.HeadingDate.ToString("dd/MM/yyyy") })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <!-- textarea -->
                    <div class="form-group">
                        <label>Yazar</label>
                        @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <!-- textarea -->
                    <div class="form-group">
                        <label>Kategori</label>
                        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <button class="btn" style="background-color: #457b9d; color: #f1faee">Güncelle</button>
            <a href="/Heading/Index/" class="btn" style="background-color: #e63946; color: #f1faee">İptal</a>
         }
    </div>
    <!-- /.card-body -->
</div>
